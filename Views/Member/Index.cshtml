@{
    ViewData["Title"] = "Member";
}

<div class="container mt-4">

    <ul class="nav nav-tabs" id="memberTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab1">
                General
            </button>
        </li>

        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab2">
                Photo & Opening Balance
            </button>
        </li>

        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab3">
                Monthly Deducation
            </button>
        </li>
    </ul>

    <div class="tab-content mt-3">

        <!-- -------------------------------- TAB 1 -------------------------------- -->
        <div class="tab-pane fade show active" id="tab1">

            <div class="card shadow-sm p-3" style="background:#e3f2fd;">
                <h5 class="text-primary fw-bold mb-3">General</h5>

                <div class="row g-3">

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Mem.No.</label>
                        <input class="form-control" placeholder="Mem.No." />
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Name</label>
                        <input class="form-control" maxlength="10" placeholder="Name" />
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Father Name</label>
                        <input class="form-control" placeholder="Father Name" />
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Office Address</label>
                        <input class="form-control" placeholder="Office Address" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">City</label>
                        <input class="form-control" placeholder="City" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Phone</label>
                        <input class="form-control" placeholder="Phone" />
                    </div>
                   
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Branch</label>
                        <input class="form-control" placeholder="Branch" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Designation</label>
                        <input class="form-control" placeholder="Designation" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Mobile1</label>
                        <input class="form-control" placeholder="Mobile1" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Mobile2</label>
                        <input class="form-control" placeholder="Mobile2" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Residence Address</label>
                        <input class="form-control" placeholder="Residence Address" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">DOB</label>
                        <input class="form-control" placeholder="DOB" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">DOJ Society</label>
                        <input class="form-control" placeholder="DOJ Society" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">EMail</label>
                        <input class="form-control" placeholder="Email" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">DOJ</label>
                        <input class="form-control" placeholder="DOJ" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">DOR</label>
                        <input class="form-control" placeholder="DOR" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Nominee</label>
                        <input class="form-control" placeholder="Nominee" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Nominee Relation</label>
                        <input class="form-control" placeholder="Nominee Relation" />
                    </div>

                </div>
            </div>
        </div>

        <!-- -------------------------------- TAB 2 -------------------------------- -->
        <div class="tab-pane fade" id="tab2">

            <div class="card shadow-sm p-3" style="background:#e8f5e9;">
                <h5 class="text-success fw-bold mb-3">Photo & Opening Balance</h5>

                <!-- Opening Balance Section -->
                <div class="card border-success mb-3">
                    <div class="card-header bg-success text-white fw-bold">
                        Opening Balance
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">Share</label>
                                <input class="form-control" placeholder="Share" />
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">CD</label>
                                <input class="form-control" placeholder="CD" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bank Details Section -->
                <div class="card border-primary mb-3">
                    <div class="card-header bg-primary text-white fw-bold">
                        Bank Details
                    </div>
                    <div class="card-body">
                        <div class="row g-3">

                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">Name</label>
                                <input class="form-control" placeholder="Name" />
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">Payable At</label>
                                <input class="form-control" placeholder="Payable At" />
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">Account No.</label>
                                <input class="form-control" placeholder="Account No." />
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Status & Date Section -->
                <div class="card border-info mb-3">
                    <div class="card-header bg-info text-white fw-bold">
                        Status & Date
                    </div>
                    <div class="card-body">
                        <div class="row g-3">

                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">Status</label>
                                <input class="form-control" placeholder="Status" />
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label class="w-50 fw-bold">Date</label>
                                <input type="date" class="form-control" />
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Photo & Signature Section -->
                <div class="card border-warning">
                    <div class="card-header bg-warning fw-bold">
                        Photo & Signature
                    </div>

                    <div class="card-body">
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="fw-bold">Member Photo</label>
                                <input type="file" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="fw-bold">Member Signature</label>
                                <input type="file" class="form-control" />
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>



        <!-- -------------------------------- TAB 3 -------------------------------- -->
        <div class="tab-pane fade" id="tab3">

            <div class="card shadow-sm p-3" style="background:#fff3e0;">
                <h5 class="text-warning fw-bold mb-3">Monthly Deduction</h5>

                <div class="row g-3">

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">Share</label>
                        <input class="form-control" placeholder="Share" />
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">WithDrawl</label>
                        <input class="form-control" placeholder="WithDrawl" />
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">G Loan Instalment</label>
                        <input class="form-control" placeholder="G Loan Instalment" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label class="w-50 fw-bold">E Loan Instalment</label>
                        <input class="form-control" placeholder="E Loan Instalment" />
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="text-end mt-4">
        <button class="btn btn-success px-4">Save</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
